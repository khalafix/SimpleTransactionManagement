@using Microsoft.AspNetCore.Identity;
@model MyProject.Models.BankAccount

@{
    ViewData["Title"] = "ایجاد شماره حساب";
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h4>BankAccount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <input asp-for="CreatedUserId" hidden value="0" />
            <input asp-for="CreatedDateTime" hidden value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label"></label>
                <input asp-for="AccountNumber" class="form-control" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
         
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Periority" class="control-label"></label>
                <input asp-for="Periority" class="form-control" />
                <span asp-validation-for="Periority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinAmount" class="control-label"></label>
                <input asp-for="MinAmount" class="form-control" />
                <span asp-validation-for="MinAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepositLimit" class="control-label"></label>
                <input asp-for="DepositLimit" class="form-control" />
                <span asp-validation-for="DepositLimit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalLimit" class="control-label"></label>
                <input asp-for="TotalLimit" class="form-control" />
                <span asp-validation-for="TotalLimit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ایجاد" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-warning">بازگشت</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
